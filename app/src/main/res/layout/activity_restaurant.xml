<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    tools:context="com.phasebeyond.restaurantfinder.RestaurantActivity">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


           <TextView
            android:id="@+id/restaurantNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Restaurant Name"/>

           <TextView
            android:id="@+id/restaurantLocalityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Restaurant Locality"/>

           <TextView
               android:id="@+id/restaurantCostTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="100dp"
               android:layout_marginLeft="5dp"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="Restaurant Cost"/>

           <TextView
               android:id="@+id/restaurantHoursTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="Restaurant Hours"/>

           <TextView
               android:id="@+id/restaurantCuisinesTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="Restaurant Cuisines"/>

           <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ADDRESS"/>

           <TextView
                android:id="@+id/restaurantAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address"/>

           <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="PHONE NUMBER"/>

           <TextView
                android:id="@+id/restaurantPhoneNoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#4CAF50"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone No"/>

           <Button
                android:id="@+id/showOnMapButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Show on Map"/>

    </LinearLayout>

</ScrollView>